<%- include('./common/header'); -%>
	<section class="hero py-16">
		<div class="container mx-auto flex items-center justify-between">
			<div class="w-1/2">
				<h6 class="text-lg"><em>Are your hungry?</em></h6>
				<h1 class="text-6xl font-bold">Don't wait!</h1>
				<button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order now</button>
			</div>
			<div class="w-1/2">
				<img src="/img/hero-pizza.png" alt="">
			</div>
		</div>
	</section>
	<!-- Menu -->
	<section class="menu container mx-auto py-8">
		<h1 class="text-xl font-bold mb-8">All pizzas</h1>
		<div class="grid grid-cols-4 col-gap-12 row-gap-16 ">
			<% pizzas.forEach((pizza) => { %>
			<div class="w-64">
				<img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
				<div class="text-center">
					<h2 class="mb-4 text-lg"><%= pizza.name %></h2>
					<span class="size py-1 px-4 rounded-full uppercase"><%= pizza.size %></span>
				</div>
				<div class="flex items-center justify-around mt-6">
					<span class="font-bold text-lg">$<%= pizza.price %></span>
					<button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-card py-1 px-6 rounded-full flex items-center font-bold">
						<span>+</span>
						<span class="ml-4">Add</span>
					</button>
				</div>
			</div>
			<% }) %>
		</div>
	</section>
<%- include('./common/footer'); -%>